{
    "manifest_version": 2,
    "name": "Kingdom of Loathing Companion",
    "version": "1.0",
    "description": "",
    "icons": {
        "48": "icons/48.png"
    },
    "web_accessible_resources": [
        "companionpane.html",
        "icons.html"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.kingdomofloathing.com/*"],
            "js": [
                "common.js",
                "topmenu.js",
                "game.js",
                "inventory.js",
                "backoffice.js",
                "fleamarket.js",
                "pvp.js",
                "mining.js",
                "choice.js",
                "fight.js",
                "charpane.js",
                "description.js",
                "loggedout.js",
                "kol.js"
            ],
            "all_frames": true
        },
        {
            "matches": ["https://kol.coldfront.net/thekolwiki/index.php/*"],
            "js": [
                "common.js",
                "wiki.js"
            ],
            "all_frames": true
        }
    ],
    "background": {
        "scripts": [
            "common.js",
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "storage",
        "alarms",
        "clipboardWrite",
        "https://www.kingdomofloathing.com/desc_item.php",
        "*://kol.coldfront.net/*"
    ]
}